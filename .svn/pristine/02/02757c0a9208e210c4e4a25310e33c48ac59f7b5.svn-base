package enklikanketa.com.a1kapanel.Receivers;

import android.app.NotificationManager;
import android.content.BroadcastReceiver;
import android.content.Context;
import android.content.Intent;

import net.nextpin.geolib.NextPin;

import enklikanketa.com.a1kapanel.Libraries.NotificationLib;
import enklikanketa.com.a1kapanel.PrefsActivity;
import enklikanketa.com.a1kapanel.R;

public class BatteryLevelReceiver extends BroadcastReceiver {

    @Override
    public void onReceive(Context context, Intent intent) {
        if (intent.getAction() != null) {
            if (intent.getAction().matches(Intent.ACTION_BATTERY_LOW)) {
                NextPin.getNextPinInstance(context).stop();
                PrefsActivity.postTrackingLog(context,"STOP", "battery_low");
                NotificationManager mNotificationManager = (NotificationManager) context.getSystemService(Context.NOTIFICATION_SERVICE);
                if (mNotificationManager != null)
                    mNotificationManager.cancel(context.getResources().getInteger(R.integer.tracking_notification_id));
            } else if (intent.getAction().matches(Intent.ACTION_BATTERY_OKAY)) {
                NextPin.getNextPinInstance(context).start();
                PrefsActivity.postTrackingLog(context, "START", "battery_okay");
                //show ongoing notification
                NotificationLib nlib = new NotificationLib(context);
                nlib.showNotificationTracking();
            }
        }
    }
}