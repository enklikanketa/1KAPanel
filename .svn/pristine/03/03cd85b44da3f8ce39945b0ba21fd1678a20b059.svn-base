package enklikanketa.com.a1kapanel.Tasks;

import android.content.ContentValues;
import android.content.Context;
import android.os.AsyncTask;

import org.json.JSONArray;
import org.json.JSONException;
import org.json.JSONObject;

import java.util.ArrayList;
import java.util.HashMap;

import enklikanketa.com.a1kapanel.Libraries.ActivityLib;
import enklikanketa.com.a1kapanel.Libraries.GeneralLib;
import enklikanketa.com.a1kapanel.System.Database;
import enklikanketa.com.a1kapanel.System.ServerCommunication;

/**
 * Created by podkrizniku on 19/4/2018.
 */

// razred Work uporabljen, da deluje progressbar med loadanjem - Logiranje
public class sendGetActivitiesTask extends AsyncTask<Object, Object, String> {

    //application context cannot be leaked
    private Context ctx;

    public sendGetActivitiesTask(Context context) {
        ctx = context.getApplicationContext();
    }

    @Override
    protected void onPreExecute() {
        super.onPreExecute();
    }

    @Override
    protected void onPostExecute(String result) {
        super.onPostExecute(result);
        //Log.d("1kapanel", "wewe result getActivities " + result);

        if (result != null) {
            try {
                JSONArray surveys = new JSONArray(result);

                if (surveys.length() > 0 /*&& surveys.getJSONObject("activities").length() > 0*/) {

                    //list of all activities ids for this user
                    ArrayList<String> survey_ids = new ArrayList<>();
                    ActivityLib aclib = new ActivityLib(ctx);

                    for(int i = 0; i < surveys.length(); i++) {
                        JSONObject survey = surveys.getJSONObject(i);
                        HashMap<String, String> data = new HashMap<>();
                        data.put("link", survey.getString("link"));
                        data.put("ank_id", survey.getString("ank_id"));
                        data.put("srv_title", survey.getString("srv_title"));
                        data.put("title", survey.getString("notif_title"));
                        data.put("message", survey.getString("notif_message"));
                        data.put("sound", survey.getString("notif_sound"));
                        data.put("action", "activity");
                        data.put("activity", survey.getString("activity"));

                        //store surveys ids in array to later compare which to delete (not active)
                        survey_ids.add(survey.getString("ank_id"));

                        aclib.setOrUpdateNewActivity(data);
                    }

                    //delete all unactive activities
                    aclib.checkAndDeleteUnactiveActivitiesDB(survey_ids);

                    //remove all data of logs from DB
                    Database DB = (Database) Database.getInstance(ctx);
                    DB.deleteRows("things_to_send", "name = 'get_activities'");
                } else {
                    saveGetActivitiesLog(ctx);
                    GeneralLib.reportCrash(new Exception("sendGetActivitiesTask no activities in response"), result);
                }

            } catch (JSONException e) {
                saveGetActivitiesLog(ctx);
                //Log.e(TAG, "sendGetAlarmsTask.class onPostExecute(): " + e);
                GeneralLib.reportCrash(e, result);
            }
        }
        //ce je null, pomeni da server ni dosegljiv ali pa so druge napake
        else {
            saveGetActivitiesLog(ctx);
            //do not show to user? what if activity is finished?
            //GeneralLib.showErrorToUser(ctx, ctx.getString(R.string.general_remote_server_error));
        }
    }

    @Override
    protected String doInBackground(Object... params) {
        return postActivitiesRequest();
    }


    private String postActivitiesRequest() {
        //pobere podatke o uporabniku iz baze
        Database DB = (Database) Database.getInstance(ctx);
        String[] uporabnik = DB.getRowData("uporabnik",
                new String[]{"identifier", "id_server"}, null);

        // poslji
        JSONObject object = new JSONObject();

        if(uporabnik != null) {
            // uporabnik prijavljen
            try {
                JSONObject logIn = new JSONObject();
                logIn.put("identifier", uporabnik[0]);
                logIn.put("id_server", uporabnik[1]);
                object.put("Login", logIn);

            } catch (JSONException e) {
                GeneralLib.reportCrash(e, object.toString());
            }

            ServerCommunication SC = new ServerCommunication(ctx);
            return SC.PostGetActivities(object);
        }
        return null;
    }

    /**
     * Saves log for refreshing alarms from server
     */
    public static void saveGetActivitiesLog(Context context){
        Database DB = (Database) Database.getInstance(context);
        ContentValues initialValues = new ContentValues();
        initialValues.put("name", "get_activities");
        initialValues.put("value", "");
        initialValues.put("tsSec", (System.currentTimeMillis()/1000)+"");

        int isLogIdInDB = DB.stejData("things_to_send", "name='get_activities'");
        //insert if not exist
        if(isLogIdInDB == 0)
            DB.getWritableDatabase().insert("things_to_send", null, initialValues);
    }
}