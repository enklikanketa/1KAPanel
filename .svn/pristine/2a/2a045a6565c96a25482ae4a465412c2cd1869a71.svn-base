<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:id="@+id/llHeaderGeoAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView style="?android:textAppearanceLarge"
            android:id="@+id/tvDate"
            android:textSize="40dp"
            android:fontFamily="sans-serif-thin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Datumcek"
            android:textColor="@android:color/white"/>

        <RelativeLayout
            android:id="@+id/rlWaitingBar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/waitingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:indeterminateDrawable="@drawable/progress_bar"
                android:indeterminate="true" />
        </RelativeLayout>

        <TextView style="?android:textAppearanceLarge"
            android:id="@+id/tvPermissionsProblem"
            android:textSize="30dp"
            android:fontFamily="sans-serif-thin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            android:clickable="true"
            android:text="Datumcek"
            android:textColor="@color/colorMobisRed"/>

        <TextView style="?android:textAppearanceLarge"
            android:id="@+id/tvProblem"
            android:textSize="40dp"
            android:fontFamily="sans-serif-thin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            android:text="Datumcek"
            android:textColor="@color/colorMobisRed"/>

        <!-- Here the actual geo-activities will go -->
        <LinearLayout
            android:id="@+id/llGeoPredictions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            />

        <enklikanketa.com.a1kapanel.CanvasView
            android:id="@+id/signature_canvas"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:id="@+id/llGeoActivites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </LinearLayout>
</ScrollView>