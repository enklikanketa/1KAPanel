<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_padding_left_right"
        android:paddingLeft="@dimen/default_padding_left_right"
        android:paddingTop="@dimen/default_padding_top_bottom"
        android:paddingEnd="@dimen/default_padding_left_right"
        android:paddingRight="@dimen/default_padding_left_right">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/survey_consent_desc" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/survey_consent_question"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/consent_permission_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="@string/survey_consent_permission_notifications" />

        <TextView
            android:id="@+id/consent_permission_locat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="@string/survey_consent_permission_location" />

        <TextView
            android:id="@+id/consent_permission_sens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="@string/survey_consent_permission_sensors" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/consent_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:text="@string/survey_consent_permission_button_consent"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/consent_decline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_grey"
                android:text="@string/survey_consent_permission_button_decline"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>