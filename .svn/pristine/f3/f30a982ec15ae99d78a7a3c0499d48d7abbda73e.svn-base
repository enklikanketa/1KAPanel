<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/pnd_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/pnd_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pnd_other_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pnd_list"
            android:orientation="vertical"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/textViewOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/editTextOther"
                android:text="@string/pnd_other"
                android:textColor="@color/textColorPrimary" />

            <EditText
                android:id="@+id/editTextOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/textColorPrimary" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonOtherOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pnd_other_layout"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:text="@string/other_ok_button"
            android:textColor="@color/colorAccent"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>